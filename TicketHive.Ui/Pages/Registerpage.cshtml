@page
@model TicketHive.Ui.Pages.RegisterpageModel
@{
}

<head>
    <title>Register Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fbe89c;
        }

        .register-container {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .register-form {
            display: flex;
            flex-direction: column;
            width: 50%;
            margin-right: 20px;
        }

            .register-form input[type=text],
            .register-form input[type=email],
            .register-form input[type=password] {
                padding: 10px;
                margin-bottom: 20px;
                border: none;
                border-radius: 5px;
            }

            .register-form input[type=submit] {
                display: inline-block;
                outline: 0;
                cursor: pointer;
                border-radius: 6px;
                border: 2px solid #305076;
                color: #305076;
                background: 0 0;
                padding: 8px;
                box-shadow: rgba(0, 0, 0, 0.07) 0px 2px 4px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1.5px 0px;
                font-weight: 600;
                font-size: 16px;
                height: 50px;
                width: 200px;
                margin-top: 10px;
            }

                .register-form input[type=submit]:hover {
                    background-color: #305076;
                    color: #fbe89c;
                }

    </style>
</head>
<body>
    <div class="register-container">
        <form class="register-form" method="post">
            <h2>Register</h2>
            <label for="Username">Username:</label>
            <input type="text" id="Username" palceholder="Username..." asp-for="@Model.Username">

            <label for="password">Password:</label>
            <input type="password" id="password" placeholder="Password..." asp-for="@Model.Password">
            <div>
                <span class="text-danger" asp-validation-for="Username"></span>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <a href="~/LogInPage">Allredy have an account? Log in</a>

            <input type="submit" value="Register">
        </form>
        <div class="register-image">
            <img style="height: 500px" src="~/logos/black.png" />
        </div>
    </div>
</body>