@page
@model TicketHive.Ui.Pages.Basket

<h1>Cart</h1>

<style>

    body{
        background-color: #fbe89c;
        color: #305076;
    }

    #btnBack{
        display: inline-block;
        outline: 0;
        cursor: pointer;
        border-radius: 6px;
        border: 2px solid #305076;
        color: #305076;
        background: 0 0;
        padding: 8px;
        box-shadow: rgba(0, 0, 0, 0.07) 0px 2px 4px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1.5px 0px;
        font-weight: 600;
        font-size: 16px;
        height: 50px;
        width: 150px;
        margin-top: 10px;
    }

    #btnPay {
        display: inline-block;
        outline: 0;
        cursor: pointer;
        border-radius: 6px;
        border: 2px solid #fbe89c;
        color: #fbe89c;
        background: #305076;
        padding: 8px;
        box-shadow: rgba(0, 0, 0, 0.07) 0px 2px 4px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1.5px 0px;
        font-weight: 600;
        font-size: 16px;
        height: 50px;
        width: 150px;
        margin-top: 10px;
    }

    #btnPay:hover {
        background-color: #223854;
        color: #fbe89c;
    }

    #btnBack:hover {
        background-color: #305076;
        color: #fbe89c;
    }
    
    


</style>

@if (Model.Cart != null && Model.Cart.CartItems != null && Model.Cart.CartItems.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cart.CartItems)
            {
                <tr>
                    <td>@item.EventName</td>
                    <td>
                        <form method="post">
                            <div class="input-group">
                                <input type="hidden" name="item_index" value="@Model.Cart.CartItems.IndexOf(item)" />
                                <input type="number" name="quantity" value="@item.Quantity" class="form-control" />
                                <button type="submit" name="action" value="increase" class="btn btn-secondary">+</button>
                                <button type="submit" name="action" value="decrease" class="btn btn-secondary">-</button>
                                <button type="submit" name="action" value="delete" class="btn btn-danger">Delete</button>
                            </div>
                        </form>
                    </td>
                    <td>@item.Price kr</td>
                    <td>@(item.Quantity * item.Price) kr</td>
                    <td></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end">Total:</td>
                <td>@*@Model.Cart.TotalAmount*@ kr</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
}
else
{
    <p>Your cart is empty.</p>
}

<div class="text-end">

</div>

<form>
    <button type="submit" id="btnBack" formaction="/BookingPage">Back to Booking</button>
</form>